{
  "Comment": "Daily stock forecast signal bot",
  "StartAt": "LoadTickers",
  "States": {
    "LoadTickers": {
      "Type": "Pass",
      "ResultPath": "$.tickers",
      "Result": { "list": ["AAPL","MSFT","AMZN","GOOGL","NVDA","META","TSLA","BRK.B","JPM","XOM"] },
      "Next": "ProcessTickers"
    },
    "ProcessTickers": {
      "Type": "Map",
      "ItemsPath": "$.tickers.list",
      "MaxConcurrency": 3,
      "Parameters": {
        "ticker.$": "$$.Map.Item.Value",
        "runDate.$": "$$.Execution.StartTime"
      },
      "Iterator": {
        "StartAt": "PerTicker",
        "States": {
          "PerTicker": {
            "Type": "Task",
            "Resource": "arn:aws:states:::lambda:invoke",
            "Parameters": {
              "FunctionName": "${PerTickerArn}",
              "Payload.$": "$"
            },
            "ResultPath": "$.perTickerResult",
            "End": true
          }
        }
      },
      "ResultPath": "$.results",
      "Next": "BuildDailyAlert"
    },
    "BuildDailyAlert": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${BuildAlertArn}",
        "Payload": {
          "runDate.$": "$$.Execution.StartTime",
          "tickers.$": "$.tickers.list"
        }
      },
      "ResultPath": "$.alert",
      "End": true
    }
  }
}